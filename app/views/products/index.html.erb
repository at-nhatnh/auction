<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= image_tag product.images.last.try(:image_url), height: 100, weight: 100 %>
        </td>
        <td><%= product.user.email %></td>
        <td><%= link_to 'Show', product, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-success' %></td>
        <td><%= link_to 'Destroy', product, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path, class: 'btn btn-primary' %>
